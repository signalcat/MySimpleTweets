<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="@dimen/etMargin"
        android:layout_marginLeft="@dimen/etMargin"
        android:background="@android:color/holo_blue_light"
        android:id="@+id/ivMyProfileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/etCompose"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/ivMyProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/etMargin"
        android:layout_marginRight="@dimen/etMargin"
        android:layout_marginTop="@dimen/etMargin"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="What's happening?" />

    <TextView
        android:layout_marginTop="@dimen/etMargin"
        android:id="@+id/tvMyUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivMyProfileImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvMyScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/tvMyUserName"
        android:layout_toEndOf="@+id/ivMyProfileImage"
        android:layout_marginStart="16dp" />

    <Button
        android:onClick="onTweet"
        android:id="@+id/btnTweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TWEET"
        android:layout_below="@+id/etCompose"
        android:layout_alignEnd="@+id/etCompose" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMyUserName"
        android:layout_toEndOf="@+id/ivMyProfileImage"
        android:text="\@" />
</RelativeLayout>
